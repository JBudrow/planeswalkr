<%= form_tag(card_search_path, method: :get) do %>

	<%= text_field_tag :name %>

  <%= select_tag :card_set,
    options_from_collection_for_select(CardSet.all, "name", "id") %>

  <%= select_tag :cost_filter, [["Less Than",    "<"],
                                ["Equal To",     "="],
                                ["Greater Than", ">"]] %>
  <%= text_field_tag :mana_cost %>

	<%= select_tag :card_type, ["Artifact", "Creature", "Enchantment", "Instant", "Land", "Planeswalker", "Sorcery"] %>

  <%= select_tag :colors, ["White", "Black", "Blue", "Green", "Red"] %>

	<%= text_field_tag :text %>

	<%= button_tag "Submit" %>

<% end %>
